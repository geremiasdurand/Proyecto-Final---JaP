@model IEnumerable<Entidades.Factura>

@{
    ViewBag.Title = "Listado";
}

<h2>Listado de facturas</h2>

<p>
    @Html.ActionLink("Crear nueva", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Id del Cliente")
        </th>
        <th>
            @Html.DisplayName("Monto Total")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdCliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MontoTotal)
        </td>
        <td>
            @Html.ActionLink("Detalles", "Details", new { idFactura = item.Id }) |
            @Html.ActionLink("Borrar", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
