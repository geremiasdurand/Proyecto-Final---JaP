@model Entidades.Administradores
@{
    ViewBag.Title = "Inicio";
}

<div class="jumbotron">
    <h1 class=" text-center">Obligatorio Final</h1>
    <h4>   </h4>
    <p class="lead, text-center">Proyecto de fin de curso (Jovenes a programar) realizado por Cristian Castro y Geremias Durand.</p>
    
</div>

<div class="row">   
    @if (Model.Rol == Entidades.Enumerados.Indefinido)
    {
        using (Html.BeginForm("LogIn", "Home"))
        {
            <div class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Usuario)
                </div>
                <div class="col-sm-2">
                    @Html.TextBoxFor(model => model.Usuario)
                </div>
                <div class="col-sm-6"></div>
            </div>
            <div class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Contraseña)
                </div>
                <div class="col-sm-2">
                    @Html.PasswordFor(model => model.Contraseña)
                </div>
                <div class="col-sm-6"></div>
            </div>
            <div> </div>
            <div class="row, text-center">
                <div class="col-sm-2"></div>
                <div class="col-sm-4">
                    <input type="submit" class="btn btn-default" value="Iniciar Sesión" />
                </div>
                <div class="col-sm-6"></div>
            </div>
        }
    }
    else
    {
        using (Html.BeginForm("LogOut", "Home"))
        {
            <div class="row, text-right">
                <div class="col-sm-2"></div>
                <div class="col-sm-4">
                    <input type="submit" class="btn btn-default" value="Cerrar Sesión" />
                </div>
                <div class="col-sm-6"></div>
            </div>
        }
    }
</div>