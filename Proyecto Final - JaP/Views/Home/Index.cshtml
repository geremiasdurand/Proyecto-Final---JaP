@model Entidades.Administradores
@{
    ViewBag.Title = "Inicio";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    @if (Model.Rol == Entidades.Enumerados.Indefinido)
    {
        using (Html.BeginForm("LogIn", "Home"))
        {
            <div class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Usuario)
                </div>
                <div class="col-sm-2">
                    @Html.TextBoxFor(model => model.Usuario)
                </div>
                <div class="col-sm-6"></div>
            </div>
            <div class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Contraseña)
                </div>
                <div class="col-sm-2">
                    @Html.PasswordFor(model => model.Contraseña)
                </div>
                <div class="col-sm-6"></div>
            </div>
            <div class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-4">
                    <input type="submit" class="btn btn-default" value="Iniciar Sesión" />
                </div>
                <div class="col-sm-6"></div>
            </div>
        }
    }
    else
    {
        using (Html.BeginForm("LogOut", "Home"))
        {
            <div class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-4">
                    <input type="submit" class="btn btn-default" value="Cerrar Sesión" />
                </div>
                <div class="col-sm-6"></div>
            </div>
        }
    }
</div>