@model IEnumerable<Entidades.Producto>

@{
    ViewBag.Title = "Listado";
}

<h2>Listado de productos</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Marca)
        </th>
        <th>
            @Html.DisplayName("Precio por unidad")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Marca)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrecioPorUnidad)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { productoId = item.Id}) |
            @Html.ActionLink("Borrar", "Delete", new { productoId = item.Id })
        </td>
    </tr>
}

</table>
